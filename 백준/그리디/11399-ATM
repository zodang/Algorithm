#include <bits/stdc++.h>
using namespace std;

int N;
vector<int> arr;

int main() {
	cin >> N;
	
	for (int i = 0; i < N; i++)
	{
	    int x;
	    cin >> x;
	    arr.push_back(x);
	}
	
	sort(arr.begin(), arr.end());
	
	int sum = 0;
	int prevSum = 0;
	
	for (int i = 0; i < N; i++)
	{
	    sum += prevSum + arr[i];
	    prevSum += arr[i];
	}
	
	cout << sum;
}
